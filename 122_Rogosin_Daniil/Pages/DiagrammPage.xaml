<Page x:Class="_122_Rogosin_Daniil.Pages.DiagrammPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_122_Rogosin_Daniil.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DiagrammPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с элементами управления -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10" HorizontalAlignment="Center">
            <TextBlock Text="Пользователь:" VerticalAlignment="Center" Margin="5,0"/>
            <ComboBox x:Name="CmbUser" DisplayMemberPath="FIO" Width="200" Margin="5,0" 
                      SelectionChanged="UpdateChart"/>

            <TextBlock Text="Тип диаграммы:" VerticalAlignment="Center" Margin="20,0,5,0"/>
            <ComboBox x:Name="CmbDiagram" Width="150" Margin="5,0" 
                      SelectionChanged="UpdateChart"/>

            <Button x:Name="BtnExportExcel" Content="Экспорт в Excel" Width="120" Margin="20,0,5,0"
                    Click="BtnExportExcel_Click"/>
            <Button x:Name="BtnExportWord" Content="Экспорт в Word" Width="120" Margin="5,0"
                    Click="BtnExportWord_Click"/>
        </StackPanel>
    </Grid>
</Page>
