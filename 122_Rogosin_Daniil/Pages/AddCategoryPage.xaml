<Page x:Class="_122_Rogosin_Daniil.Pages.AddCategoryPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:_122_Rogosin_Daniil.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="AddCategoryPage">

    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Название категории" 
                       Grid.Row="0" Grid.Column="0"
                       FontSize="20" 
                       Margin="10" 
                       VerticalAlignment="Center"/>

            <TextBox x:Name="TBCategoryName" 
                     Grid.Row="0" Grid.Column="1"
                     Margin="10" Height="30"
                     Text="{Binding Name}" />

            <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                        Orientation="Horizontal" 
                        HorizontalAlignment="Center"
                        Margin="10">
                <Button x:Name="ButtonSaveCategory" 
                        Content="Сохранить" 
                        Click="ButtonSaveCategory_Click" 
                        Margin="5" Width="100"/>
                <Button x:Name="ButtonClean" 
                        Content="Очистить" 
                        Click="ButtonClean_Click" 
                        Margin="5" Width="100"/>
            </StackPanel>
        </Grid>
    </ScrollViewer>
</Page>
