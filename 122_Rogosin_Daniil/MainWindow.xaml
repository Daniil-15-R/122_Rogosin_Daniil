<Window x:Class="_122_Rogosin_Daniil.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_122_Rogosin_Daniil"
        mc:Ignorable="d"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        Title="Мое приложение" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="45"/>
        </Grid.RowDefinitions>

        <!-- Верхняя строка с кнопками -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" VerticalAlignment="Center">
            <Button x:Name="BackButton"
                    Content="Назад"
                    Width="80"
                    Height="30"
                    Click="BackButton_Click"/>

            <!-- Кнопки для смены темы -->
            <Button Content="Светлая" 
                    Width="80"
                    Height="30"
                    Margin="10,0,0,0"
                    Click="LightTheme_Click"/>
            <Button Content="Темная" 
                    Width="80"
                    Height="30"
                    Margin="5,0,0,0"
                    Click="DarkTheme_Click"/>
            <Button Content="Природа" 
                    Width="80"
                    Height="30"
                    Margin="5,0,0,0"
                    Click="NatureTheme_Click"/>
        </StackPanel>

        <!-- Frame для страниц -->
        <Frame Grid.Row="1"
               Name="MainFrame"
               NavigationUIVisibility="Hidden"
               HorizontalAlignment="Stretch"
               VerticalAlignment="Stretch"/>

        <!-- Нижняя строка с датой и временем -->
        <TextBlock x:Name="DateTimeNow"
                   HorizontalAlignment="Right"
                   Margin="0,0,10,0"
                   Grid.Row="2"
                   VerticalAlignment="Center"
                   Height="35"
                   Width="194"/>
    </Grid>
</Window>