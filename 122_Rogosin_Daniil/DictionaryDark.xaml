<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Цвета как SolidColorBrush -->
    <SolidColorBrush x:Key="PrimaryColor" Color="#BB86FC"/>
    <SolidColorBrush x:Key="SecondaryColor" Color="#03DAC6"/>
    <SolidColorBrush x:Key="AccentColor" Color="#CF6679"/>
    <SolidColorBrush x:Key="TextColor" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="BackgroundColor" Color="#121212"/>

    <!-- Стиль Window -->
    <Style TargetType="Window">
        <Setter Property="Background" Value="{StaticResource BackgroundColor}"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <!-- Стиль Button -->
    <Style TargetType="Button">
        <Setter Property="Height" Value="35"/>
        <Setter Property="Padding" Value="12,8"/>
        <Setter Property="Margin" Value="8"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
        <Setter Property="Background" Value="{StaticResource PrimaryColor}"/>
        <Setter Property="Foreground" Value="Black"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Cursor" Value="Hand"/>
        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Background" Value="#A369F0"/>
            </Trigger>
            <Trigger Property="IsPressed" Value="True">
                <Setter Property="Background" Value="#8A57D4"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <!-- Стиль TextBlock -->
    <Style TargetType="TextBlock">
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="FontSize" Value="12"/>
    </Style>

    <!-- Стиль Frame -->
    <Style TargetType="Frame">
        <Setter Property="Background" Value="#1E1E1E"/>
        <Setter Property="BorderThickness" Value="1"/>
        <Setter Property="BorderBrush" Value="#333333"/>
    </Style>

</ResourceDictionary>